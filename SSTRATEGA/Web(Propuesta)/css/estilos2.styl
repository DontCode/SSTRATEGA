		border-right 1px solid gris_texto;
		display inline-block
		width 20%
		margin 0 auto 0 4%
		overflow hidden
		&:nth-child(5)
			border-right 0px	
.testimonios
	display flex
	padding 15px
	width auto
	.opiniones
		background #EEE
		display inline-block
		margin 15px 0px 0px 10px 
		padding 15px
		width 400px	
			
.opciones
	width auto
	padding 10px
	.magnus
		border-right 1px solid #000
		padding 10px
		margin 0 auto
		width 400px	
	.simac
		padding 10px
		margin 0 auto
		width 400px	
.parallax
	margin-top 30px
	background url(../img/oficina.jpg) #000 fixed
	background-repeat no-repeat
	background-size 100% 800px
	height 500px	
	padding 30px
	position relative
	font-family 'Raleway', sans-serif
	color transparent
	font-weight bold
	font-size 125px
	/*-webkit-text-stroke-color white
	-webkit-text-stroke-width 0.75px*/
.premios
	display block
	background #B3C834
	padding 15px
	position relative
	border-left 16px solid #FFF
	border-right 16px solid #FFF
	&:before
		content ""
		border-top 61px solid transparent
		border-left 2.5em solid #FFF
		border-bottom 67px solid transparent
		position absolute
		top 0px 
		left 0px
		box-shadow 0px 0px 0px
	&:after
		content ""
		position absolute
		top 0px
		right 0px
		border-top 61px solid transparent 
		border-left 35px solid #FFF
		border-bottom 67px solid transparent
		-webkit-transform rotate(180deg)
		-moz-transform rotate(180deg)
		transform rotate(180deg) 	
	.contenedorItems
		display inline-flex
		display -webkit-inline-flex
		display -moz-inline-flex
		-webkit-flex-flow row wrap
		flex-flow row wrap
		-moz-flex-flow fow wrap
		display flex
		width 100%
		padding 10px
		margin 0 auto
		.items
			display inline-block
			margin 0 auto 0px 
			&:before
				content '\e603'
				color gris_oscuro
				font-family 'iconosSstratega',sans-serif
				font-size 80px
.productosSnap
	.flechaUp
		bottom 60px
		right 50px
		position fixed
		margin-top 0px
		-moz-transition all 0.3s ease-out
		-webkit-transition all 0.3s ease-out
		transition all 0.3s ease-out
		&:before
			content '\e603'
			font-family 'flechas'
			font-size 36px
			color gris_oscuro
			opacity 0.5
	.products
		padding 15px
		width 80%
		margin 100px auto
		border-bottom 1px
		box-shadow 0px 1px 1px -1px #aaa
		.headerProducts
			font-family 'Raleway',sans-serif
			font-weight 200
			font-size 75px
			width 50%
			margin 50px auto
		.video
			width 50%
			display block
			margin  20px auto
			img
				width 100%
				display block
				margin auto	
		.texto
			width 70%
			margin auto
			display block
			font-size 25px
			font-family 'Raleway',sans-serif
			font-weight 400
			text-shadow 0px 2px 2px #AAA
.roller
	.rollerCont
		width 100%
		margin-left 1%
		.imagen
			background-image url("../img/magnus160a.jpg")
			display inline-block
			width 31.8%
.slide
	img
		display block
		max-width 100%
		margin auto
.sticky
	position fixed
	width 100%
	top 0px
	left 0px
	margin-top 0px
	-webkit-transform translate(0px, 0px)
	-moz-transform translate(0px, 0px)
	transform translate(0px,0px)

