*
	text-align justify
	list-style none
a
	list-style none
	text-decoration none
	color #FFF
img
	border 0px
body
	margin 0px
	padding 0px
.fixed
	position fixed
	width 99%
	top 0px
	left 0px	
	background gris_oscuro;
footer
	background gris_oscuro
	border-top 1px solid #222
	color gris_texto
	padding 15px
	.listas
		color gris_claro
		display inline-block
		padding 5px
		width 25.5%
		.encabezadoListas
			color gris_texto
			font-size 24px
			font-family 'Source Sans Pro', sans-serif
		.lista
			height 200px
			overflow hidden
			display inline-block
			padding-left 10px
			li
				padding-top 10px
				-webkit-transition all 0.3 ease-out
				-moz-transition all 0.3 ease-out
				transition all 0.3 ease-out
			&:hover
				color gris_texto
		.social
			display inline-block
			font-family 'Source Sans Pro',sans-serif
			font-size 24px
			overflow hidden
			height 200px
			li
				display inline-block
				font-family sans-serif		
header
	background #FFF
	border-bottom 1px solid #AAA
	color gris_oscuro
	margin-top 0px
	overflow hidden
	position relative
	padding 7px 10px 30px 30px 
	z-index 2
	.logo
		.imgLogo 
			img
				border 0px
				max-width 140px
				max-height 140px
	.desplegable
		display none
	nav
		background transparent
		display inline-block
		font-family 'Arimo', sans-serif
		padding 10px
		top 0
		left 50px
		position absolute
		-webkit-transition all 0.3s ease-out
		-moz-transition all 0.3s ease-out
		transition all 0.3s ease-out
		z-index 1
		ul
			margin 0 auto
			width 100%
			margin-left 12%
			li
				border-right 1px solid gris_texto
				color #000
				display inline-block
				margin-left 5em
				a
					color gris_oscuro
.imagina
	padding 10px
	.contenedorIntro
		margin 0 auto
		width 80%
	.imgImagina
		display inline-block
		img
			max-width 500px
			max-height 500px
	.encabezadoIntro	
		margin-left 16%
		font-size 80px
		color #000
		font-family 'Raleway',sans-serif
		font-weight 100
	.textoImagina
		float right
		font-family 'Arimo',sans-serif
		font-weight 400	
		display inline-block
		top 0px
		width 45%	
.intro	
	display inline-block
	border-bottom 1px solid #AAA 
	box-shadow 1px 1px 1px #AAA
	.encabezadoIntro	
		margin-left 16%
		font-size 80px
		color #000
		font-family 'Raleway', sans-serif
		font-weight 100
	.contenedorIntro
		margin 0 auto
		width 80%
		.introImg
			float left
			display inline-block
			img 
				max-width 500px
				max-height 500px
		.introTexto
			float right
			font-family 'Raleway',sans-serif
			font-weight 400	
			display inline-block
			top 0px
			width 45%
			.titulo
				font-size 32px
				margin-top 10px
.menuProductos
	background gris_oscuro
	padding 15px 0px 15px 0px
	font-family 'Raleway', sans-serif
	font-size 20px
	font-weight 200
	margin-top -115px
	-webkit-transition 0.3s all ease-out
	-moz-transition 0.3s all ease-out
